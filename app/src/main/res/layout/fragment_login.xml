<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:padding="24dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="登录/注册"
        android:textSize="36sp"
        android:textColor="@color/white"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edit_main_phone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="90dp"
        android:paddingLeft="8dp"
        app:met_baseColor="@color/white"
        app:met_primaryColor="@color/white"
        app:met_errorColor="#ddaa00"
        app:met_textColor="@color/white"
        app:met_textColorHint="#e0e0e0"
        android:textSize="18sp"
        android:hint="请输入您的手机号"
        app:met_floatingLabel="normal"
        app:met_floatingLabelTextSize="12sp"
        app:met_floatingLabelText="手机号"
        app:met_clearButton="true"
        android:inputType="number"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:text="点击按钮表示您同意并遵守"
            android:textSize="12sp"/>
        <Button
            android:id="@+id/btn_main_use"
            android:onClick="onViewItemClicked"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:background="@color/clear"
            android:textColor="#3d3bee"
            android:text="《使用协议》"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:text="和"
            android:textSize="12sp"/>
        <Button
            android:id="@+id/btn_main_privacy"
            android:onClick="onViewItemClicked"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:background="@color/clear"
            android:textColor="#3d3bee"
            android:text="《隐私协议》"
            android:textSize="12sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_main_login"
        android:onClick="onViewItemClicked"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_login_button"
        android:text="@string/button_get_verify_code"
        android:textSize="18sp"
        android:textColor="#4079fb"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/eden_enterprise_name"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:gravity="center"/>
</LinearLayout>