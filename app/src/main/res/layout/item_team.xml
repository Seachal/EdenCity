<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:layout_marginVertical="@dimen/dp_10"
    android:layout_marginHorizontal="@dimen/dp_6"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardElevation="@dimen/dp_5"
    app:cardMaxElevation="@dimen/dp_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv"
            android:layout_marginHorizontal="@dimen/dp_8"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp_2"
            android:maxLines="1"
            android:paddingTop="8dp"
            android:text="的深V妇女节大V开始搭萨迪克把独生的是口就怪你是的女开始搭你的军事的看见女不舍得女"
            android:textColor="@color/tv333"
            android:textSize="@dimen/sp_13" />

        <com.edencity.customer.custum.MyNormalTextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_alignLeft="@id/tv"
            android:layout_below="@id/tv"
            android:layout_marginEnd="@dimen/dp_8"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/address"
            android:drawablePadding="@dimen/dp_3"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="山西一单层"
            android:textColor="#999999"
            android:textSize="9sp"
            android:layout_marginBottom="@dimen/dp_5"
           />
    </RelativeLayout>
</android.support.v7.widget.CardView>