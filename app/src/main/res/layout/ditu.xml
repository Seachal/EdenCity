<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/ll"

    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="@dimen/dp_60"
        android:background="@drawable/bg_white_conner_20">

        <com.edencity.customer.custum.MyMediumTextView
            android:id="@+id/baidu"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_60"
            android:gravity="center"
            android:text="百度地图"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/blue_nomal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.edencity.customer.custum.MyMediumTextView
            android:id="@+id/gaode"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_60"
            android:text="高德地图"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/blue_nomal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/baidu" />

        <View
            android:id="@+id/view28"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"
            android:background="#f5f5f5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/baidu" />
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>