<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll"
    android:background="@android:color/transparent"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="4dp"
        android:layout_margin="@dimen/dp_4"
        app:cardElevation="@dimen/dp_2">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:scaleType="centerCrop" />

            <com.edencity.customer.custum.MyNormalTextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_iv"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_16"
                android:text="20元"
                android:textColor="#999999"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.edencity.customer.custum.MyNormalTextView
                android:id="@+id/get"
                android:layout_width="wrap_content"
                android:text="领取0/3"
                android:textColor="@color/white"
                android:background="@drawable/text_bg_blue"
                android:paddingHorizontal="@dimen/dp_16"
                android:textSize="@dimen/sp_11"
                android:layout_alignRight="@id/item_iv"
                android:layout_below="@id/item_iv"
                android:paddingVertical="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_12"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/get"
                android:layout_alignLeft="@id/item_iv"
                android:layout_alignRight="@id/item_iv"
                android:layout_marginBottom="@dimen/dp_8"
                android:ellipsize="end"
                android:maxLines="2"
                android:textStyle="bold"
                android:text="这里是SD卡哈是大VID 还得分奇偶圣诞节哦i"
                android:textColor="#333333"
                android:textSize="11sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>